{
  "name": "@shader3d/react",
  "version": "0.1.0",
  "description": "React components and hooks for Shader3D",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@shader3d/core": "workspace:*",
    "@shader3d/runtime": "workspace:*",
    "@shader3d/presets": "workspace:*",
    "@shader3d/layers": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": ["shader", "webgpu", "react", "hooks", "graphics"],
  "license": "MIT"
}
