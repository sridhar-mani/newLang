{
  "name": "@shader3d/effects",
  "version": "0.1.0",
  "description": "Unified API for Shader3D - one import for all features",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "dependencies": {
    "@shader3d/core": "workspace:*",
    "@shader3d/runtime": "workspace:*",
    "@shader3d/presets": "workspace:*",
    "@shader3d/layers": "workspace:*",
    "@shader3d/natural-language": "workspace:*",
    "@shader3d/paint-effects": "workspace:*",
    "@shader3d/learn-from-examples": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": ["shader", "webgpu", "effects", "unified-api"],
  "license": "MIT"
}
